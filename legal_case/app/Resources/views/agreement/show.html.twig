{% extends 'base.html.twig' %}

{% block body %}
    <h1>Agreement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agreement.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ agreement.value }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ agreement.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('agreement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('agreement_edit', { 'id': agreement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
