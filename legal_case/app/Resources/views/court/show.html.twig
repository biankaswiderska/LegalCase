{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sąd</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ court.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ court.name }}</td>
            </tr>
            <tr>
                <th>Typ</th>
                <td>{{ court.type }}</td>
            </tr>
            <tr>
                <th>Numer telefonu</th>
                <td>{{ court.phone }}</td>
            </tr>
            <tr>
                <th>Komentarz</th>
                <td>{{ court.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('court_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('court_edit', { 'id': court.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
