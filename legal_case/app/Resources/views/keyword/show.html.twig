{% extends 'base.html.twig' %}

{% block body %}
    <h1>Słowo kluczowe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ keyword.id }}</td>
            </tr>
            <tr>
                <th>Słowo</th>
                <td>{{ keyword.word }}</td>
            </tr>
            <tr>
                <th>Komentarz</th>
                <td>{{ keyword.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('keyword_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('keyword_edit', { 'id': keyword.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
