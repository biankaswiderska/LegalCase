{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lawsuit</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lawsuit.id }}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if lawsuit.addDate %}{{ lawsuit.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hearingdate</th>
                <td>{% if lawsuit.hearingDate %}{{ lawsuit.hearingDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ lawsuit.signature }}</td>
            </tr>
            <tr>
                <th>Side</th>
                <td>{{ lawsuit.side }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ lawsuit.comment }}</td>
            </tr>
            <tr>
                <th>Verdict</th>
                <td>{{ lawsuit.verdict }}</td>
            </tr>
            <tr>
                <th>Verdictshort</th>
                <td>{{ lawsuit.verdictShort }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lawsuit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lawsuit_edit', { 'id': lawsuit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
