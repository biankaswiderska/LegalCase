{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sprawa sądowa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lawsuit.id }}</td>
            </tr>
            <tr>
                <th>Data dodania</th>
                <td>{% if lawsuit.addDate %}{{ lawsuit.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Data przesłuchania</th>
                <td>{% if lawsuit.hearingDate %}{{ lawsuit.hearingDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sygnatura sądowa</th>
                <td>{{ lawsuit.signature }}</td>
            </tr>
            <tr>
                <th>Strona sporu</th>
                <td>{{ lawsuit.side }}</td>
            </tr>
            <tr>
                <th>Komentarz</th>
                <td>{{ lawsuit.comment }}</td>
            </tr>
            <tr>
                <th>Werdykt</th>
                <td>{{ lawsuit.verdict }}</td>
            </tr>
            <tr>
                <th>Werdykt w skrócie</th>
                <td>{{ lawsuit.verdictShort }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lawsuit_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('lawsuit_edit', { 'id': lawsuit.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
