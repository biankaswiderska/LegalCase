{% extends 'base.html.twig' %}

{% block body %}
    <h1>Status sprawy sądowej</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lawsuitStatus.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ lawsuitStatus.value }}</td>
            </tr>
            <tr>
                <th>Komentarz</th>
                <td>{{ lawsuitStatus.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lawsuitstatus_index') }}">Powrót do listy</a>
        </li>
