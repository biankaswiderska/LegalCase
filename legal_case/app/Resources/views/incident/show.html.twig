{% extends 'base.html.twig' %}

{% block body %}
    <h1>Incident</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ incident.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ incident.name }}</td>
            </tr>
            <tr>
                <th>Incidentdate</th>
                <td>{% if incident.incidentDate %}{{ incident.incidentDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ incident.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('incident_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('incident_edit', { 'id': incident.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
