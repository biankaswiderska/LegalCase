{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lawfirm</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lawFirm.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lawFirm.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ lawFirm.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ lawFirm.email }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ lawFirm.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lawfirm_index') }}">Back to the list</a>
